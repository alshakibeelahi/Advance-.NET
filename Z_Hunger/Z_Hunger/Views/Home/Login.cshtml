
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form method="post">
    <select name="Options">
        <option selected disabled>Login as</option>
        <option value="Donor">Donor</option>
        <option value="Employee">Employee</option>
    </select>
    <span class="text-danger">@Html.ValidationMessage("Options")</span><br />

    <input type="text" name="Username" placeholder="User Name" />
    <span class="text-danger">@Html.ValidationMessage("Username")</span><br />
    <input type="password" name="Password" placeholder="Password" />
    <span class="text-danger">@Html.ValidationMessage("Password")</span><br />
    <input type="submit" class="btn btn-success" />
</form>

