@model IEnumerable<Z_Hunger.EF.Model.Collection>

@{
    ViewBag.Title = "AllDonations";
    Layout = "~/Views/Shared/_EmpLayout.cshtml";
}

<h2>All Donations</h2>

<table class="table table-hover">
    <tr>
        <th>Food Description</th>
        <th>Status</th>
        <th>Assigned Employee</th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Collect.FoodDes</td>
                <td>@item.Collect.Status</td>
                <td>@item.Emp.Name</td>
            </tr>
        }
    }

</table>
