
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
@if (ViewData["Error"] != null)
{
    <span class="text-danger">@ViewData["Error"]</span>
}
<form method="post">
    <select name="Options">
        <option selected disabled>Login as</option>
        <option value="Customer">Customer</option>
        <option value="Admin">Admin</option>
    </select><br />
    <input type="text" name="Username" placeholder="User Name" />
    <span class="text-danger">@Html.ValidationMessage("Uname")</span><br />
    <input type="password" name="Password" placeholder="Password" />
    <span class="text-danger">@Html.ValidationMessage("Password")</span><br />
    <input type="submit" class="btn btn-success" />
</form>

