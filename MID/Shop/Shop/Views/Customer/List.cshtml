
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<h3>Customer List</h3>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Password</th>
        <th></th>
        <th></th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Phone</td>
                <td>@item.Password</td>
                <td><a href="/Customer/Edit/@item.Id">Edit</a></td>
                <td><a href="/Customer/Delete/@item.Id">Delete</a></td>
            </tr>
        }
 
</table>


